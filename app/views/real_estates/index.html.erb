<div class="w-full">
  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
  <% end %>

  <% content_for :title, "Real estates" %>

  <div class="flex justify-between items-center">
    <h1 class="font-bold text-4xl">Real estates</h1>
    <%= link_to "New real estate", new_real_estate_path, class: "rounded-lg py-3 px-5 bg-blue-600 text-white block font-medium" %>
  </div>

  <div id="real_estates" class="min-w-full">
    <% @real_estates.each do |real_estate| %>
      <%= render real_estate %>
      <p>
        <%= link_to "Show this real estate", real_estate, class: "ml-2 rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
      </p>
    <% end %>
  </div>
</div>
